<resources xmlns:ns2="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="PopupOverlay" parent="Theme.MaterialComponents">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="tint">@color/white_color</item>
    </style>


    <style name="AppTheme.myMenu">
        <item name="android:backgroundTint">@color/white_color</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.MaterialComponents" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:stateListAnimator" ns2:ignore="NewApi">
            @animator/mtrl_btn_unelevated_state_list_anim
        </item>
        <item name="elevation">0dp</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="materialThemeOverlay">@style/MyThemeOverlay_Toolbar</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
    </style>

    <style name="myMainText" parent="">
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="myMessageText" parent="">
        <item name="backgroundTint">@color/colorPrimaryText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>

    </style>

    <!--Form items-->

    <!--Titles-->
    <style name="myFormTitle" parent="">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myEventTitle" parent="">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myListTitle" parent="myFormTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="myMainTitle" parent="myMainText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="myMainDarkTitle" parent="myMainText">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Subtitles-->

    <style name="myMainSubTitle" parent="myMainText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="myMainSubTitleTitle" parent="myMainSubTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myMainDarkSubtitle" parent="myMainSubTitle">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--EditTexts-->

    <style name="myFormEditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorSecondaryText</item>
        <item name="boxStrokeColor">@color/colorSecondaryText</item>
    </style>


    <!--Buttons-->

    <style name="myMainButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="myAcceptButton" parent="@style/myMainButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="myCancelButton" parent="@style/myMainButton">
        <item name="backgroundTint">@color/white_color</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="myMainScreenButton" parent="@style/myMainButton">
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/colorPrimaryOpacity</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:outlineSpotShadowColor">@color/colorPrimaryText</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white_color</item>
        <item name ="iconSize">28sp</item>
        <item name="elevation">10dp</item>
</style>

    <!--DatePicker-->

    <style name="datepicker" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Lists-->

    <style name="myMainListTitle" parent="myMainText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myMainListSubTitle" parent="myMainText">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
